{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://secureclaw.local/spec/secureclaw_capsule_contract_v1.schema.json",
  "title": "SecureClaw Capsule Mediation Contract Schema v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "name", "filesystem", "network", "process", "transport", "assertions"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "name": { "type": "string", "minLength": 1 },
    "filesystem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allow_read_prefixes", "allow_write_prefixes", "deny_read_prefixes"],
      "properties": {
        "allow_read_prefixes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "allow_write_prefixes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "deny_read_prefixes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "network": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allow_public_internet", "allow_loopback_http"],
      "properties": {
        "allow_public_internet": { "type": "boolean", "const": false },
        "allow_loopback_http": { "type": "boolean" }
      }
    },
    "process": {
      "type": "object",
      "additionalProperties": false,
      "required": ["deny_by_default", "allow_exec_paths"],
      "properties": {
        "deny_by_default": { "type": "boolean", "const": true },
        "allow_exec_paths": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "transport": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "allowed_uds_paths"],
      "properties": {
        "mode": { "type": "string", "enum": ["uds", "http"] },
        "allowed_uds_paths": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "assertions": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Assertion" }
    }
  },
  "$defs": {
    "Assertion": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "kind", "must_deny"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "kind": {
          "type": "string",
          "enum": ["fs_read", "exec", "internet_get", "http_post", "gateway_act", "gateway_mcp_act"]
        },
        "must_deny": { "type": "boolean" },
        "path": { "type": "string" },
        "argv": { "type": "array", "items": { "type": "string" } },
        "url": { "type": "string" }
      }
    }
  }
}

